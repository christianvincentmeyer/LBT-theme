          "settings": {
            "heading": "Beebe & Beyond is an All-Day Gravel & Singletrack Ride organized by Lichen Bike Tours",
            "heading_size": "h1",
            "isAnchor": "default",
            "anchorLabel": "",
            "anchorID": ""
          }
