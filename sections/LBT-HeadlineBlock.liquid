{%- style -%}
  .LBT_headline-section {
    width: 100%;
    background: var(--Colors-Green-Dark, #0f4e41);
    padding: 80px 0;
  }

  .LBT_headline-wrapper {
    display: flex;
    max-width: var(--Container-Sizes-Max-Width, 1200px);
    padding: var(--Spacing-3xl, 80px) var(--sds-size-space-0);
    margin: 0 auto;
    align-items: center;
    align-self: stretch;
    background: var(--Colors-Green-Dark, #0f4e41);
  }
  .LBT_headline-content {
    max-width: 960px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 0 16px;
  }
  .LBT_headline-content h1 {
    color: #edf7eb !important;
    margin: 0;
    padding: 0;
    text-align: left;
    width: 100%;
    leading-trim: both;
    text-edge: cap;

    /* Display/90 */
    font-family: 'Inclusive Sans';
    font-size: 56px;
    font-style: normal;
    font-weight: 700;
    line-height: 105%; /* 58.8px */
    letter-spacing: -3px;
  }
  .LBT_headline-content h2 {
    color: #edf7eb !important;
    /* Display/60 */
    font-family: 'Inclusive Sans';
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: 120%; /* 28.8px */
  }
{%- endstyle -%}

<div class="LBT_headline-section">
  <div class="LBT_headline-wrapper">
    <div class="LBT_headline-content">
      <h1 class="left">Catskills Grand Loop</h1>
