{%- style -%}
  .LBT_headline-section {
    width: 100%;
    background: var(--Colors-Green-Dark, #0f4e41);
    padding: 80px 0;
  }
  .LBT_headline-wrapper {
    display: flex;
    max-width: var(--page-width);
    padding: var(--Spacing-3xl, 80px) var(--sds-size-space-0);
    margin: 0 auto;
    align-items: center;
    align-self: stretch;
    justify-content: center;
    background: var(--Colors-Green-Dark, #0f4e41);
  }
  .LBT_headline-content {
    width: {{ settings.content_width }}px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 0 16px;
  }
  .LBT_headline-content h1 {
    color: #edf7eb !important;
    margin: 0;
    padding: 0;
    text-align: left;
    width: 100%;
    leading-trim: both;
    text-edge: cap;

    /* Display/90 */
    font-family: 'Inclusive Sans';
    font-size: 56px;
    font-style: normal;
    font-weight: 700;
    line-height: 105%; /* 58.8px */
    letter-spacing: -3px;
  }
  .LBT_headline-content h2 {
    color: #edf7eb !important;
    /* Display/60 */
    font-family: 'Inclusive Sans';
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: 105%; /* 28.8px */
    margin: 0;
    padding: 0;
  }
  .LBT_headline-content h3 {
    color: #edf7eb !important;
    /* Display/60 */
    font-family: 'Inclusive Sans';
    font-size: 18px;
    font-style: normal;
    font-weight: 700;
    line-height: 105%; /* 28.8px */
    margin: 0;
    padding: 0;
  }
  .anchors-wrapper {
    display: flex;
    max-width: var(--Container-Sizes-Md-Width, 800px);
    padding-top: var(--Spacing-md, 16px);
    align-items: flex-start;
    align-content: flex-start;
    gap: 10px;
    align-self: stretch;
    flex-wrap: wrap;
  }
  .anchors-wrapper a {
    color: #fff;
    text-decoration: none;
    display: flex;
    padding: var(--Spacing-sm, 8px) var(--Spacing-md, 16px);
    justify-content: center;
    align-items: center;
    border-radius: var(--Spacing-lg, 24px);
    border: 1px solid var(--Colors-Surface-Light, #edf7eb);
  }
  .anchors-wrapper a:hover {
    background-color: #edf7eb;
    color: #0f4e41;
  }
  @media screen and (max-width: 990px) {
    .LBT_headline-content {
      padding: 0 40px
    }
  }
{%- endstyle -%}

<div class="LBT_headline-section">
  <div class="LBT_headline-wrapper">
    <div class="LBT_headline-content">
      {% if section.settings.heading_size == 'h1' %}
        <h1 class="left">
          {{ section.settings.headline }}
        </h1>
        <h2>
          {{ section.settings.subhead }}
        </h2>
      {% else %}
        <h2 class="left">
          {{ section.settings.headline }}
        </h2>
        <h3>
          {{ section.settings.subhead }}
        </h3>
      {% endif %}
      <div id="anchor-wrapper" class="anchors-wrapper"></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "LBT Headline Block",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        }
      ],
      "default": "h2",
      "label": "Headline Type"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "text",
      "id": "subhead",
      "label": "Sub-headline"
    }
  ],
  "presets": [
    {
      "name": "LBT Headline Block",
      "category": "section"
    }
  ]
}
{% endschema %}
