{%- style -%}
  .LBT_heroImageSection {
    width: 100%;
  }
  .LBT_heroImageSection-content {
  }
  .heroImage {
    display: flex;
    width: 100%;
    max-width: 1920px;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--Spacing-lg, 24px);
    aspect-ratio: 96/49;
    margin: 0 auto;
  }
{%- endstyle -%}

<div class="LBT_heroImageSection">
  <div class="LBT_heroImageSection-content">
    <img class="heroImage" src="{{ section.settings.image | img_url: "master"}}">
  </div>
</div>

{% schema %}
{
  "name": "LBT HeroImage",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.multicolumn.blocks.column.settings.image.label"
    }
  ],
  "presets": [
    {
      "name": "LBT HeroImage",
      "category": "section"
    }
  ]
}
{% endschema %}
