{%- style -%}
  .LBT_RWGPS-section {
    width: 100%;
    padding: 80px 0;
  }
  .LBT_RWGPS-wrapper {
    display: flex;
    max-width: var(--page-width);
    padding: var(--Spacing-3xl, 80px) var(--sds-size-space-0);
    margin: 0 auto;
    align-items: center;
    align-self: stretch;
    justify-content: center;
  }
  .LBT_RWGPS-content {
    /* width: {{ settings.content_width }}px; */
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: row;
    gap: 16px;
    padding: 0 80px;
  }
  .LBT_RWGPS-copy {
    display: flex;
    align-items: flex-start;
    width:100%;
    flex-direction: column;
    gap: 16px;
    padding: 0 16px;
  }
  .LBT_RWGPS-content h2 {
    /* Display/60 */
    font-family: 'Inclusive Sans';
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: 105%; /* 28.8px */
    margin: 0;
    padding: 0;
    width:100%;
  }
  .LBT_RWGPS-content a {
    width: auto;
    align-self: flex-start;
  }
  .LBT_RWGPS-content iframe {
    display: block !important;
    aspect-ratio: 4/ 3;
    width:100% !important;
    max-width: 800px !important;
    min-width: unset !important;
    height: 640px !important;
  }
  @media screen and (max-width: 1380px) {
    .LBT_RWGPS-section {
      padding: 40px 0;
    }
    .LBT_RWGPS-content {
      width: 100%;
      flex-direction: column-reverse;
      padding: 0 16px;
    }
    .LBT_RWGPS-copy {
      max-width: {{ settings.content_width }}px;
      padding-left: 16px;
      padding-right: 16px;
    }
    .LBT_RWGPS-content iframe {
      aspect-ratio: 96 / 49;
      margin: 0 auto;
    }
  }
{%- endstyle -%}

<div class="LBT_RWGPS-section color-{{ section.settings.color_scheme }}">
  <div class="LBT_RWGPS-wrapper">
    <div class="LBT_RWGPS-content">
      <div class="LBT_RWGPS-copy">
        <h2 class="left">
          {{ section.settings.headline }}
        </h2>
        <p>
          {{ section.settings.copy }}
        </p>
      </div>
      {{ section.settings.RWGPS_embed }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "LBT RWGPS",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "text",
      "id": "copy",
      "label": "Support Copy"
    },
    {
      "type": "html",
      "id": "RWGPS_embed",
      "label": "Embed Code"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-6"
    }
  ],
  "presets": [
    {
      "name": "LBT RWGPS",
      "category": "section"
    }
  ]
}
{% endschema %}
